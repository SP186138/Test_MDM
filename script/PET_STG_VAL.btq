.logon $TDPID/$TDUSER,$TDPWD
 
.SET ERROROUT STDOUT;
.SET SESSION CHARSET 'UTF8';
.SET ERRORLEVEL 3624 SEVERITY 0
.SET ERRORLEVEL 3803 SEVERITY 0


INSERT INTO VALIDATION_ERR_$BTCH (
MKTNG_PGM_NBR
,REGIS_CNSMR_ID_VAL
, LOAD_ID
, SYS_ERR_CODE
,RECORD_SOURCE)
SELECT
DER1.MKTNG_PGM_NBR,
DER1.REGIS_CNSMR_ID_VAL,
DER1.LOAD_ID,
'DUPLICATE PET INFORMATION ON SOURCE FILE' ,
'PET_STG'
FROM
(
SELECT 
MKTNG_PGM_NBR,
REGIS_CNSMR_ID_VAL,
PET_SEQ_NBR,
STG.LOAD_ID,
RECORD_IND
FROM
$ETL_DB.PET_STG STG
WHERE LOAD_ID in (select load_id from VALIDATION_$BTCH)
GROUP BY 1,2,3,4,5
HAVING COUNT(*) >1
)DER1;

.IF ERRORLEVEL > 0 THEN .QUIT ERRORCODE

.EXIT

