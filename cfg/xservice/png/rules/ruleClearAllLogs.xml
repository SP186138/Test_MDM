*       Description		: This method clears all the logs and deletes all the older files from logs when invoked.

**********************************************************************************************************-->
  <DEFINE_METHOD Name="clearAllLogs">
    <RULE>
      <ACTION>
        <REQUEST Name="getServices" ServiceName="BCM_MASTER" AssignToVar="varServiceList"/>
        <FOR_EACH CurrentElement="currService" SelectList="$varServiceList/*">
          <REQUEST Name="clearLogFiles" ServiceName="BCM_MASTER" AssignToVar="varClearservice">
            <!--<OPTION Value="XServer"/>
<SNAME Value="XServer"/>-->
            <OPTION Value="All"/>
            <SNAME Value="{$currService/@Value}"/>
          </REQUEST>
        </FOR_EACH>
        <EXECUTE_SHELL_COMMAND Value="DeleteOldLogs.BAT" AssignToVar="errStatus"/>
      </ACTION>
    </RULE>
  </DEFINE_METHOD>
